@model Test2.Models.DBModels.Subject

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card managementFooter">
        <div class="card-header">
            <h5 class="card-title">Edit Subject</h5>
        </div>
        <div class="form">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger form-style" })
                @Html.HiddenFor(model => model.SubjectId)

                <div class="form-group row">
                    @Html.LabelFor(model => model.SubjectName, htmlAttributes: new { @class = "col-sm-2 col-control-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.SubjectName, new { htmlAttributes = new { @class = "form-control form-style" } })
                        @Html.ValidationMessageFor(model => model.SubjectName, "", new { @class = "text-danger form-style" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.DepartmentId, "DepartmentId", htmlAttributes: new { @class = "col-sm-2 col-control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownList("DepartmentId", null, htmlAttributes: new { @class = "form-control form-style" })
                        @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger form-style" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Credits, htmlAttributes: new { @class = "col-sm-2 col-control-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Credits, new { htmlAttributes = new { @class = "form-control form-style" } })
                        @Html.ValidationMessageFor(model => model.Credits, "", new { @class = "text-danger form-style" })
                    </div>
                </div>

                <div class="form-group row">
                    <div id="buttonPadding" class="col-sm-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        @Html.ActionLink("Cancel", "Index", new { }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
