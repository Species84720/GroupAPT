@model Test2.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>Account Management</h2>
@if(ViewBag.StatusMessage != ""){
    <div class="alert alert-success" role="alert">
        @ViewBag.StatusMessage
    </div>
}
<div id="managementFooter">
    <hr />
    <div class="col-md-3">
        <div id="loginCard" class="card">
            <div class="card-body">
                <h5 class="card-title">Change Password</h5>
                <p class="card-text">You are able to change your current password from here.</p>
                @if (Model.HasPassword)
                {
                    <a href="@Url.Action("ChangePassword")" class="btn btn-primary">Change Password</a>
                }
                else
                {
                    @Html.ActionLink("Create", "SetPassword")
                }
            </div>
        </div>
    </div>

