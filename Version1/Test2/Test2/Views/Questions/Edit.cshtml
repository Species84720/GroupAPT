@model Test2.Models.DBModels.Question

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card managementFooter">
        <div class="card-header">
            <h5 class="card-title">Edit Question</h5>
        </div>
        <div class="form">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger form-style" })
                @Html.HiddenFor(model => model.QuestionId)
                <div class="form-group row">
                    @Html.LabelFor(model => model.SubjectId, "SubjectId", htmlAttributes: new { @class = "col-control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.DropDownList("SubjectId", null, htmlAttributes: new { @class = "form-control form-style" })
                        @Html.ValidationMessageFor(model => model.SubjectId, "", new { @class = "text-danger form-style" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.TopicId, "TopicId", htmlAttributes: new { @class = "col-control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.DropDownList("TopicId", null, htmlAttributes: new { @class = "form-control form-style" })
                        @Html.ValidationMessageFor(model => model.TopicId, "", new { @class = "text-danger form-style" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.QuestionUsage, htmlAttributes: new { @class = "col-sm-2 col-control-label" })
                    <div class="col-sm-10">
                        @Html.EnumDropDownListFor(model => model.QuestionUsage, htmlAttributes: new { @class = "form-control form-style" })
                        @Html.ValidationMessageFor(model => model.QuestionUsage, "", new { @class = "text-danger form-style" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.QuestionText, htmlAttributes: new { @class = "col-sm-2 col-control-label" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(model => model.QuestionText, new { htmlAttributes = new { @class = "form-control form-style" }, rows = "10", cols = "50" })
                        @Html.ValidationMessageFor(model => model.QuestionText, "", new { @class = "text-danger form-style" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.SampleAnswer, htmlAttributes: new { @class = "col-sm-2 col-control-label" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(model => model.SampleAnswer, new { htmlAttributes = new { @class = "form-control form-style" } })
                        @Html.ValidationMessageFor(model => model.SampleAnswer, "", new { @class = "text-danger form-style" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.QuestionFormat, htmlAttributes: new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.EnumDropDownListFor(model => model.QuestionFormat, htmlAttributes: new { @class = "form-control form-style" })
                        @Html.ValidationMessageFor(model => model.QuestionFormat, "", new { @class = "text-danger form-style" })
                    </div>
                </div>

                <div class="form-group row">
                    <div id="buttonPadding" class="col-sm-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        @Html.ActionLink("Cancel", "EditQuestions", "Examiner", new { subject = Model.SubjectId }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
