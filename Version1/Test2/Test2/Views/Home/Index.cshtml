@{
    ViewBag.Title = "Home Page";
}

<div class="HomepageCarousel">
    <div id="carouselHome" class="carousel slide" data-ride="carousel" style="width:700px; margin: 0 auto">
        <ol class="carousel-indicators">
            <li data-target="#carouselHome" data-slide-to="0" class="active"></li>
            <li data-target="#carouselHome" data-slide-to="1"></li>
            <li data-target="#carouselHome" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/Images/pic1.jpg" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Quality Education</h3>
                    <p>Ensure that you get the best quailty education.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Content/Images/pic2.jpg" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Efficent Testing</h2>
                    <p>Save paper, save time, save resources!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Content/Images/pic3.jpg" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Fast Results</h2>
                    <p>Quality delivery, fast corrections and secure.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselHome" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#carouselHome" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
    </div>
</div>