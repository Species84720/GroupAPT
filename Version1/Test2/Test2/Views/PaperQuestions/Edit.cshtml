@model Test2.Models.DBModels.PaperQuestion

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PaperQuestion</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PaperQuestionId)

        <div class="form-group">
           <div class="col-md-10">
                @Html.Hidden("ExamId", Model.ExamId, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ExamId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           <div class="col-md-10">
                @Html.Hidden("QuestionId", Model.QuestionId, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.QuestionId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           <div class="col-md-10">
                @Html.HiddenFor(model => model.NumberInPaper, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumberInPaper, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            How Many Marks is this question worth at this exam?
            <div class="col-md-10">
                @Html.EditorFor(model => model.MarksAllocated, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MarksAllocated, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "EditPapers","Examiner")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
