@model Test2.Models.DBModels.Department

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="loginCard" class="card">
        <div class="card-header">
            <h5 class="card-title">Edit Department</h5>
        </div>
        <div class="form">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "max-width:100%" })
                @Html.HiddenFor(model => model.DepartmentId)
                <div class="form-group row">
                    @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "col-sm-2 col-control-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control", @style = "max-width:100%" } })
                        @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger", @style = "max-width:100%" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.DepartmentParentId, htmlAttributes: new { @class = "col-sm-2 col-control-label" })
                    <div class="col-sm-10">
                        @*Html.EditorFor(model => model.DepartmentParentId, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.DropDownListFor(m => m.DepartmentParentId, ViewBag.DepartmentList as SelectList, "Choose Department:", new { @class = "form-control", @style = "max-width:100%" })
                        @Html.ValidationMessageFor(model => model.DepartmentParentId, "", new { @class = "text-danger", @style = "max-width:100%" })
                    </div>
                </div>

                <div class="form-group row">
                    <div id="buttonPadding" class="col-sm-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        @Html.ActionLink("Cancel", "Index", new { }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}