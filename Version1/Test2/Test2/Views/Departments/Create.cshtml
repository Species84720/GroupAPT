@model Test2.Models.DBModels.Department

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="loginCard" class="card">
        <div class="card-header">
            <h5 class="card-title">Create a Department</h5>
        </div>
        <div class="form">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger form-style" })

                <div class="form-group row">
                    @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "col-sm-2 col-control-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control form-style" } })
                        @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger form-style" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.DepartmentParentId, htmlAttributes: new { @class = "col-sm-2 col-control-label" })

                    <div class="col-sm-10">
                        @*Html.EditorFor(model => model.DepartmentParentId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DepartmentParentId, "", new { @class = "text-danger" })*@
                        @Html.DropDownListFor(model => model.DepartmentParentId, ViewBag.DepartmentList as SelectList, "Choose Department:", new { @class = "form-control form-style" })
                    </div>
                </div>
                <div class="form-group row">
                    <div id="buttonPadding" class="col-sm-10">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        @Html.ActionLink("Cancel", "Index", new { }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}