@using Test2.Models.DBModels
@model Test2.Models.DBModels.Department

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="loginCard" class="card">
    <div class="card-header">
        <h5 class="card-title">Department Details</h5>
    </div>
    <div class="card-body">

        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <dt>@Html.DisplayNameFor(model => model.DepartmentName)</dt>
                <dd>@Html.DisplayFor(model => model.DepartmentName)</dd>
            </li>
            <li class="list-group-item">
                <dt>@Html.DisplayNameFor(model => model.DepartmentParentId)</dt>
                <dd>
                    @{
                        List<Department> list = ViewBag.DepartmentList;
                    }
                    @Html.DisplayFor(model => list.Find(x => x.DepartmentId == model.DepartmentParentId).DepartmentName)
                </dd>
            </li>
        </ul>

        <div id="buttonPadding" class="col-sm-10">
            @Html.ActionLink("Edit", "Edit", new { id = Model.DepartmentId }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Cancel", "Index", new { area = "" }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>