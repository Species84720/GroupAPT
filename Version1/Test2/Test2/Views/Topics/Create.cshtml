@model Test2.Models.DBModels.Topic

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div id="loginCard" class="card">
    <div class="card-header">
        <h5 class="card-title">Create Topic for subject: @ViewBag.Subject</h5>
    </div>
    <div class="form">
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "max-width:100%" })
            <div class="form-group row">
                @Html.LabelFor(model => model.TopicName, htmlAttributes: new { @class = "col-control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.TopicName, new { htmlAttributes = new { @class = "form-control", @style = "max-width:100%" } })
                    @Html.ValidationMessageFor(model => model.TopicName, "", new { @class = "text-danger", @style = "max-width:100%" })
                </div>
            </div>

            <div class="form-group row">
                <div id="buttonPadding" class="col-sm-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    @Html.ActionLink("Cancel", "EditQuestions", "Examiner", new { subject = Model.SubjectId }, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
