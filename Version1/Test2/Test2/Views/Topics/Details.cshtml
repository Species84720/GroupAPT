@model Test2.Models.DBModels.Topic

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card managementFooter">
    <div class="card-header">
        <h5 class="card-title">Topic Details</h5>
    </div>
    <div class="card-body">

        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <dt>@Html.DisplayNameFor(model => model.RelatedSubject.SubjectName)</dt>
                <dd>@Html.DisplayFor(model => model.RelatedSubject.SubjectName)</dd>
            </li>
            <li class="list-group-item">
                <dt>@Html.DisplayNameFor(model => model.TopicName)</dt>
                <dd>@Html.DisplayFor(model => model.TopicName)</dd>
            </li>
        </ul>

        <div id="buttonPadding" class="col-sm-10">
            @Html.ActionLink("Edit", "Edit", new { id = Model.TopicId }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Back to List", "EditQuestions", "Examiner", new { area = "" }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>