                        @Html.EditorFor(model => model.Campus, new { htmlAttributes = new { @class = "form-control form-style" } })
                        @Html.ValidationMessageFor(model => model.Campus, "", new { @class = "text-danger form-style" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Building, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Building, new { htmlAttributes = new { @class = "form-control form-style" } })
                        @Html.ValidationMessageFor(model => model.Building, "", new { @class = "text-danger form-style" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Floor, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Floor, new { htmlAttributes = new { @class = "form-control form-style" } })
                        @Html.ValidationMessageFor(model => model.Floor, "", new { @class = "text-danger form-style" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Block, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Block, new { htmlAttributes = new { @class = "form-control form-style" } })
                        @Html.ValidationMessageFor(model => model.Block, "", new { @class = "text-danger form-style" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Room, htmlAttributes: new { @class = "control-label col-md-2" })
