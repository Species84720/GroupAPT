@model Test2.Models.DBModels.Location

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card managementFooter">
    <div class="card-header">
        <h5 class="card-title">Location Details</h5>
    </div>
    <div class="card-body">

        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <dt>@Html.DisplayNameFor(model => model.Campus)</dt>
                <dd>@Html.DisplayFor(model => model.Campus)</dd>
            </li>
            <li class="list-group-item">
                <dt>@Html.DisplayNameFor(model => model.Building)</dt>
                <dd>@Html.DisplayFor(model => model.Building)</dd>
            </li>
            <li class="list-group-item">
                <dt>@Html.DisplayNameFor(model => model.Floor)</dt>
                <dd>@Html.DisplayFor(model => model.Floor)</dd>
            </li>
            <li class="list-group-item">
                <dt>@Html.DisplayNameFor(model => model.Block)</dt>
                <dd>@Html.DisplayFor(model => model.Block)</dd>
            </li>
            <li class="list-group-item">
                <dt>@Html.DisplayNameFor(model => model.Room)</dt>
                <dd>@Html.DisplayFor(model => model.Room)</dd>
            </li>
        </ul>

        <div id="buttonPadding" class="col-sm-10">
            @Html.ActionLink("Edit", "Edit", new { id = Model.LocationId }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Cancel", "Index", new { area = "" }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>