@model IEnumerable<Test2.Models.DBModels.ExamSession>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Exam Sessions</h2>
<table class="table">
    <tr>
        <th>
            Location
        </th>
        <th>
            Subject
        </th>
        <th>
            Starts At
        </th>
        <th>
            Ends At
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>

                @Html.DisplayFor(modelItem => item.RelatedLocation.Campus)
                @Html.DisplayFor(modelItem => item.RelatedLocation.Building)
                @Html.DisplayFor(modelItem => item.RelatedLocation.Block)
                @Html.DisplayFor(modelItem => item.RelatedLocation.Floor)
                @Html.DisplayFor(modelItem => item.RelatedLocation.Room)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RelatedSubject.SubjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExamDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExamEndTime)
            </td>


            <td>
                @Html.ActionLink("Edit", "Edit", "ExamSessions", new { id = item.ExamId }, new { }) |
                @Html.ActionLink("Details", "Details", "ExamSessions", new { id = item.ExamId }, new { }) |

            </td>
        </tr>
    }
</table>
