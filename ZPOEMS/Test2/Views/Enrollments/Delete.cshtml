        <h5 class="card-title">Delete Enrollment</h5>
    </div>
    <div class="card-body">

        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <dt>
                    @Html.DisplayNameFor(model => model.RelatedStudent.UserId)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.RelatedStudent.UserId)
                </dd>
            </li>
            <li class="list-group-item">
                <dt>
                    @Html.DisplayNameFor(model => model.RelatedSubject.SubjectName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.RelatedSubject.SubjectName)
                </dd>
            </li>
            <li class="list-group-item">
                <dt>
                    @Html.DisplayNameFor(model => model.ExamMark)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ExamMark)
                </dd>
            </li>
            <li class="list-group-item">
                <dt>
                    @Html.DisplayNameFor(model => model.SeatNumber)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SeatNumber)
                </dd>
            </li>
            <li class="list-group-item">
                <dt>
                    @Html.DisplayNameFor(model => model.SessionStatus)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SessionStatus)
                </dd>
            </li>
            <li class="list-group-item">
                <dt>
                    @Html.DisplayNameFor(model => model.FinalAssessment)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FinalAssessment)
                </dd>
            </li>
        </ul>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div id="buttonPadding" class="col-sm-10">
                <input type="submit" value="Delete" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Index", new { }, new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</div>